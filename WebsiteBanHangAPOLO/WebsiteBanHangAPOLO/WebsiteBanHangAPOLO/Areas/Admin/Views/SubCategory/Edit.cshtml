@model WebsiteBanHangAPOLO.Models.EF.SubCategory
@{
    ViewBag.Title = "Sửa danh mục con";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/subcategory" class="nav-link">Danh mục con</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Sửa</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh mục con</li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="row">
    <div class="col-md-12">
        <div class="card card-default">
            <div class="card-header">
                <h3 class="card-title">Sửa danh mục con</h3>
            </div>
            <div class="card-body p-0">
                <div class="bs-stepper linear">

                    <div class="bs-stepper-content">
                        @using (Html.BeginForm("Edit", "SubCategory", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(x => x.ID)

                            <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                <div class="form-group">
                                    <label for="Title">Tên danh mục con:</label>
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Nhập tên danh mục con" })
                                    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="ParentID">Danh mục cha:</label>
                                    @Html.DropDownList("ParentID", (IEnumerable<SelectListItem>)ViewBag.Categories, "Chọn danh mục cha", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ParentID, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="Descripttion">Mô tả:</label>
                                    @Html.TextAreaFor(x => x.Descripttion, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Descripttion, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="Position">Thứ tự:</label>
                                    @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label for="SeoTitle">Seo Title:</label>
                                    @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.SeoTitle, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="SeoDecripttion">Seo Descripttion</label>
                                    @Html.TextAreaFor(x => x.SeoDecripttion, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.SeoDecripttion, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label for="SeoKeywords">Seo KeyWord:</label>
                                    @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.SeoKeywords, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <a href="/admin/subcategory" class="btn btn-danger">Quay lại</a>
                                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer"></div>
        </div>
        <!-- /.card -->
    </div>
</div>

